      <Steel>75</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Pemmican>50</Pemmican>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>Glassy_CraftTable</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
