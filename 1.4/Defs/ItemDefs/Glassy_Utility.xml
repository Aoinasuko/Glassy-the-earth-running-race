      <effectWorking>Smelt</effectWorking>
      <soundWorking>Recipe_MakeBow</soundWorking>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Glassy_TentBall</researchPrerequisite>
    </recipeMaker>
