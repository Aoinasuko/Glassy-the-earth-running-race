<Defs>

  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>Glassy_StunBomb</defName>
    <label>Glassy StunBomb</label>
    <description>It is a special stun grenade that is filled by sunlight or moonlight. It can stun all organisms around itself for a long time.\n\n&lt;color=#B1FBFF&gt;This equipment would also be able to be equipped by other races with smaller body sizes and Human.&lt;/color&gt;</description>
    <graphicData>
      <texPath>Glassy/Weapon/FlashBang</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <tradeability>Sellable</tradeability>
    <statBases>
      <Mass>0.5</Mass>
      <EquipDelay>2</EquipDelay>
      <MarketValue>1500</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    <tickerType>Normal</tickerType>
    <thingCategories>
      <li>BEP_Apparel</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <scoreOffset>4</scoreOffset>
      <careIfWornByCorpse>false</careIfWornByCorpse>
