  <ThingDef ParentName="BuildingBase">
    <defName>Glassy_AC</defName>
    <label>Glassy Tent AC</label>
    <description>A powerful air conditioning system optimized for Glassy tents. The power of the glow allows you to regulate the temperature inside your tent as you wish without fuel.\n\nHowever, it is very unstable in structure and will eventually break down without maintenance as the system is regularly damaged. It is also not portable.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Glassy/Build/Tent/AC</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>14</pathCost>
    <tickerType>Normal</tickerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>750</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(180,180,180,0)</glowColor>
      </li>
      <li Class="Glassy_Race.CompProperties_TempControlEx">
        <energyPerSecond>30</energyPerSecond>
      </li>
    </comps>
  </ThingDef>

</Defs>